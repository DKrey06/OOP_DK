<Window x:Class="DKrey_TODO_list.Task_ADD_Window.ADD_Task_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DKrey_TODO_list.Task_ADD_Window"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource DefaultText}"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource TaskListBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding WindowTitle}" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="10" Foreground="{StaticResource AcceptDark}"/>

        <!-- Название задачи -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Название:" Style="{StaticResource FormLabel}" Margin="10,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TitleTextBox" Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource NewTaskTitle}" Margin="10,5" Height="30"/>

        <!-- Описание -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание:" Style="{StaticResource FormLabel}" Margin="10,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="DescriptionTextBox" Text="{Binding TaskDescription}"
                 Style="{StaticResource NewTaskDesc}" Margin="10,5" Height="60" AcceptsReturn="True"/>

        <!-- Дата выполнения -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата выполнения:" Style="{StaticResource FormLabel}" Margin="10,5"/>
        <DatePicker Grid.Row="3" Grid.Column="1" x:Name="DueDatePicker" SelectedDate="{Binding DueDate}"
                    Margin="10,5" Height="30" FontSize="14"/>

        <!-- Категория -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Категория:" Style="{StaticResource FormLabel}" Margin="10,5"/>
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="CategoryComboBox" 
                  ItemsSource="{Binding Categories}" SelectedValue="{Binding SelectedCategory}"
                  Margin="10,5" Height="30" FontSize="14"/>

        <!-- Важность -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Важность:" Style="{StaticResource FormLabel}" Margin="10,5"/>
        <ComboBox Grid.Row="5" Grid.Column="1" x:Name="ImportanceComboBox" 
                  ItemsSource="{Binding ImportanceLevels}" SelectedValue="{Binding SelectedImportance}"
                  Margin="10,5" Height="30" FontSize="14"/>

        <!-- Важная задача -->
        <CheckBox Grid.Row="6" Grid.Column="1" x:Name="IsImportantCheckBox" 
                  Content="Пометить как важную" IsChecked="{Binding IsImportant}"
                  Margin="10,5" FontSize="14" VerticalAlignment="Center"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Отмена" Click="CancelButton_Click" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Height="30" 
                    Style="{StaticResource AddTaskButton}" IsEnabled="{Binding CanSave}"/>
        </StackPanel>
    </Grid>
</Window>