<Window x:Class="DKrey_TODO_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DKrey_TODO_list"
        mc:Ignorable="d"
        Title="To-do list" Height="832" Width="1280"
    WindowStartupLocation="CenterScreen">
    <Grid x:Name="ADD_TASK" Background="#f7e6d4" Cursor="">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="235"/>
            <ColumnDefinition Width="535"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="{StaticResource AcceptLight}"/>
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.Column="1"/>
        <Rectangle Fill="{StaticResource TaskChangeBG}" Grid.Column="2"/>
        <Rectangle Fill="{StaticResource AcceptLight}" Grid.Column="3"/>

        <!--Logo-->
        <Ellipse HorizontalAlignment="Center" Height="145" Margin="0,10,0,0" VerticalAlignment="Top" Width="215" Fill="#FF5758A6"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" Text="TO DO" VerticalAlignment="Top" Foreground="White" FontSize="48" FontFamily="Arial Black"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,112,0,0" TextWrapping="Wrap" Text="LIST" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,198,0,0" TextWrapping="Wrap" Text="🚀 Developed by DKrey" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="20" Width="225" Foreground="#FF7A5C3C"/>
        <Rectangle HorizontalAlignment="Center" Height="15" Margin="0,178,0,0" VerticalAlignment="Top" Width="215" Fill="#FF4B3535" RenderTransformOrigin="0.5,0.5"/>

        <!--TaskList-->
        <Grid Grid.Column="1" Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Style="{StaticResource Heading1}" Content="Tasks" VerticalAlignment="Center" Padding="20 0 0 0" IsHitTestVisible="False"/>

            <!--Add Task Button-->
            <Button Style="{StaticResource RoundAccentButton}" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Center" 
        Height="40" 
        Width="40" 
        Margin="0 0 20 0"
        Command="{Binding AddTaskCommand}">
                <!--Icon-->
                <Viewbox Width="30" Height="30">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>

            <!--Search Task Bar-->
            <TextBox x:Name="TaskSearchBox" 
         Style="{StaticResource TaskListSearchBox}" 
         Grid.Row="1" 
         Margin="20 0" 
         Cursor="IBeam"
         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>

            <Label IsHitTestVisible="False"
                   Content="Search Tasks..."
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Margin="40 0 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Style="{StaticResource SearchButton}" Grid.Row="1"
                HorizontalAlignment="Right" Margin="0 0 30 0" VerticalAlignment="Center" Padding="10" Background="White"
                    BorderBrush="Transparent" Height="30" Width="30" Cursor="Hand">
                <Viewbox Width="20" Height="20">
                    <Path Data="{StaticResource SearchIcon}" Fill="{StaticResource Borders}"/>
                </Viewbox>
            </Button>

            <!-- Split Container for Active and Completed Tasks -->
            <Grid Grid.Row="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Active Tasks -->
                <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0 0 0 1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Активные задачи" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,5"
                                   Foreground="{StaticResource AcceptDark}"/>

                        <ListView Grid.Row="1"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  ItemsSource="{Binding ActiveTasks}"
                                  SelectedItem="{Binding SelectedTask}"
                                  MouseDoubleClick="TaskItem_DoubleClick">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TaskCardStyle}" Padding="10" Margin="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}" 
                                                       FontWeight="Bold" FontSize="14" TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Description}" 
                                                       Foreground="Gray" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"
                                                       FontSize="12"/>

                                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding DueDate, StringFormat='Срок: {0:dd.MM.yyyy}'}" 
                                                           FontSize="11" Foreground="DarkGray"/>
                                                <TextBlock Text="{Binding TaskCategory}" Margin="10,0,0,0" 
                                                           FontSize="11" Foreground="DarkBlue"/>
                                            </StackPanel>

                                            <CheckBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                                      IsChecked="{Binding IsComplete}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"
                                                      Command="{Binding DataContext.CompleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Rectangle Grid.Row="1" Fill="LightGray" Margin="0,2"/>

                <!-- Completed Tasks -->
                <Border Grid.Row="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Выполненные задачи" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,5,0,5"
                                   Foreground="{StaticResource AcceptDark}"/>

                        <ListView Grid.Row="1"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  ItemsSource="{Binding CompletedTasks}"
                                  SelectedItem="{Binding SelectedTask}"
                                  MouseDoubleClick="TaskItem_DoubleClick">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TaskCardStyle}" Padding="10" Margin="2" Opacity="0.7">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}" 
                                                       FontWeight="Bold" FontSize="14" TextTrimming="CharacterEllipsis"
                                                       TextDecorations="Strikethrough"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Description}" 
                                                       Foreground="Gray" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"
                                                       FontSize="12" TextDecorations="Strikethrough"/>

                                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding DueDate, StringFormat='Срок: {0:dd.MM.yyyy}'}" 
                                                           FontSize="11" Foreground="DarkGray"/>
                                                <TextBlock Text="{Binding TaskCategory}" Margin="10,0,0,0" 
                                                           FontSize="11" Foreground="DarkBlue"/>
                                            </StackPanel>

                                            <CheckBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                                      IsChecked="{Binding IsComplete}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"
                                                      IsEnabled="False"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!--Task Viewer-->
        <Grid Grid.Column="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Task Title-->
            <TextBlock Grid.Row="0" 
                       Text="{Binding SelectedTask.Title, FallbackValue='Название задачи'}"
                       Style="{StaticResource Title}"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>

            <!--Task Description-->
            <Border Grid.Row="1" 
                    Background="White" 
                    BorderBrush="{StaticResource Borders}" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="10"
                    Margin="0,0,0,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding SelectedTask.Description, FallbackValue='Описание задачи'}"
                               FontSize="14"
                               Foreground="{StaticResource DefaultText}"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <!--Task Category-->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Категория:" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding SelectedTask.TaskCategory, FallbackValue='Не указана'}"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </Grid>

            <!--Task Status-->
            <Grid Grid.Row="3" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Статус:" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding SelectedTask.TaskState, FallbackValue='Не указан'}"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </Grid>

            <!--Due Date-->
            <Grid Grid.Row="4" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Дата выполнения:" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </Grid>

            <!--Importance-->
            <Grid Grid.Row="5" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Важность:" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding SelectedTask.TaskImportance, FallbackValue='Не указана'}"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </Grid>

            <!--Buttons-->
            <StackPanel Grid.Row="6" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom">
                <Button Content="Завершить" 
                        Height="40" 
                        Width="159" 
                        Style="{StaticResource CompleteButton}" 
                        Command="{Binding CompleteTaskCommand}"
                        Margin="0,0,10,0"/>

                <Button Content="Изменить" 
                        Height="40" 
                        Width="159" 
                        Style="{StaticResource AddTaskButton}" 
                        Command="{Binding EditTaskCommand}"
                        Margin="0,0,10,0"/>

                <Button Content="Удалить" 
                        Height="40" 
                        Width="159" 
                        Style="{StaticResource Delete}" 
                        Command="{Binding DeleteTaskCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>