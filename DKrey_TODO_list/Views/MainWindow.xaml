<Window x:Class="DKrey_TODO_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DKrey_TODO_list"
        mc:Ignorable="d"
        Title="To-do list" Height="832" Width="1280"
    WindowStartupLocation="CenterScreen">
    <Grid x:Name="ADD_TASK" Background="#f7e6d4" Cursor="">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="235"/>
            <ColumnDefinition Width="535"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="50"/>


        </Grid.ColumnDefinitions>

        <Rectangle Fill="{StaticResource AcceptLight}"/>
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.Column="1"/>
        <Rectangle Fill="{StaticResource TaskChangeBG}" Grid.Column="2"/>
        <Rectangle Fill="{StaticResource AcceptLight}" Grid.Column="3"/>
        <!--Logo-->
        <Ellipse HorizontalAlignment="Center" Height="145" Margin="0,10,0,0" VerticalAlignment="Top" Width="215" Fill="#FF5758A6"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" Text="TO DO" VerticalAlignment="Top" Foreground="White" FontSize="48" FontFamily="Arial Black"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,112,0,0" TextWrapping="Wrap" Text="LIST" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,198,0,0" TextWrapping="Wrap" Text="🚀 Developed by DKrey" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="20" Width="225" Foreground="#FF7A5C3C"/>
        <Rectangle HorizontalAlignment="Center" Height="15" Margin="0,178,0,0" VerticalAlignment="Top" Width="215" Fill="#FF4B3535" RenderTransformOrigin="0.5,0.5"/>
        <!--TaskList-->
        <Grid Grid.Column="1" Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Style="{StaticResource Heading1}" Content="Tasks" VerticalAlignment="Center" Padding="20 0 0 0" IsHitTestVisible="False"/>

            <!--Add Task But-->
            <Button Style="{StaticResource RoundAccentButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Height="40" Width="40" Margin="0 0 20 0">
                <!--Icon-->
                <Viewbox Width="30" Height="30">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>

            <!--Search Task Bar-->
            <TextBox x:Name="TaskSearchBox" Style="{StaticResource TaskListSearchBox}" Grid.Row="1" Margin="20 0" Cursor="IBeam" />

            <Label IsHitTestVisible="False"
                   Content="Search Tasks..."
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Margin="40 0 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Style="{StaticResource SearchButton}" Grid.Row="1"
                HorizontalAlignment="Right" Margin="0 0 30 0" VerticalAlignment="Center" Padding="10" Background="White"
                    BorderBrush="Transparent" Height="30" Width="30" Cursor="Hand">
                <Viewbox Width="20" Height="20">
                    <Path Data="{StaticResource SearchIcon}" Fill="{StaticResource Borders}"/>
                </Viewbox>
            </Button>
            
            <!--List View For Task Items-->
            <ListView Grid.Row="2"
                      Background="Transparent"
                      Margin="0 20"
                      BorderBrush="Transparent">
            </ListView>
        </Grid>
        
        <!--Task Viewer-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!--Task Details-->
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding Title, FallbackValue='Тема задачи'}"
               Style="{StaticResource Title}"
               VerticalAlignment="Center"
               Grid.Row="0"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Padding="15 5"
                CornerRadius="5"
                Background="LightGray"
                Margin="0 0 10 0">
                        <TextBlock Text="{Binding TaskCategory, FallbackValue='Категория'}"
                       Foreground="Black"
                       FontWeight="Normal"
                       FontSize="14"/>
                    </Border>
                    <Border Padding="15 5"
                CornerRadius="5"
                Background="Gray">
                        <TextBlock Text="{Binding TaskState, FallbackValue='Статус'}"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14"/>
                    </Border>
                </StackPanel>

                <ScrollViewer Grid.Row="2"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="{Binding Description, FallbackValue='Описание задачи'}"
                   FontSize="16"
                   Foreground="{StaticResource AcceptDarkClick}"
                   Margin="0 10"
                   TextWrapping="Wrap"/>
                </ScrollViewer>

                <TextBlock Text="{Binding DueDate, StringFormat='Срок: {0:dd/MM/yyyy HH:mm}', FallbackValue='Срок: 01/01/2025'}"
               Background="{StaticResource AcceptLight}"
               Padding="20 3"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Grid.Row="3"
               Foreground="White"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0 20 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource Title}"
               Text="Чек-лист задачи"
               VerticalAlignment="Center"
               Margin="20 0 0 0"/>

                <ListView Grid.Row="1"
          ItemsSource="{Binding ChecklistItems}"
          Background="Transparent"
          BorderThickness="0"
          Margin="20 10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding}" IsChecked="False" Margin="5"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Завершить" 
            Height="40" 
            Width="159" 
            Style="{StaticResource CompleteButton}" 
            Command="{Binding DataContext.CompleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
            Margin="0,0,10,0"/>

                <Button Content="Изменить" 
            Height="40" 
            Width="159" 
            Style="{StaticResource AddTaskButton}" 
            Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
            Margin="0,0,10,0"/>

                <Button Content="Удалить" 
            Height="40" 
            Width="159" 
            Style="{StaticResource Delete}" 
            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
